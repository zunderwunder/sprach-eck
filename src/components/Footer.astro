---
import NavLink from './ui/NavLink.astro';

const currentYear = new Date().getFullYear();

const quickLinks = [
  { label: "Über mich", href: "/ueber-mich" },
  { label: "Leistungen", href: "/leistungen" },
  { label: "Ablauf & Kosten", href: "/ablauf-und-kosten" },
  { label: "Kontakt", href: "/kontakt" }
];
---

<style>
  .footer-link {
    @apply relative text-dark/70 hover:text-dark transition-colors;
  }

  .footer-link::after {
    @apply absolute left-0 bottom-[-4px] w-full h-0.5 bg-accent scale-x-0 origin-right transition-transform duration-300;
    content: '';
  }

  .footer-link:hover::after {
    @apply scale-x-100 origin-left;
  }
</style>

<footer class="py-12 bg-white border-t border-gray-100">
  <div class="max-w-7xl mx-auto px-4 sm:px-6">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-12 gap-12">
      <!-- Logo and Description -->
      <div class="md:col-span-5">
        <a href="/" class="inline-block">
          <img 
            src="/images/sprach-eck-logo.svg"
            alt="Sprach Eck Logo"
            width="64"
            height="64"
            class="w-16 h-16"
          />
        </a>
        <p class="mt-4 text-base text-dark/70 leading-relaxed">
          Sprach Eck – Logopädie für Kinder und Jugendliche in Baden bei Wien.
        </p>
      </div>

      <!-- Quick Links -->
      <div class="md:col-span-3">
        <h3 class="font-semibold mb-4 text-dark font-primary">Quick Links</h3>
        <ul class="space-y-2">
          {quickLinks.map(({ label, href }) => (
            <li>
              <NavLink {href}>
                {label}
              </NavLink>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div class="md:col-span-4">
        <h3 class="font-semibold mb-4 text-dark font-primary">Kontakt</h3>
        <div class="space-y-2 text-base text-dark/70">
          <p>Kaiser Franz Joseph-Ring 36</p>
          <p>2500 Baden</p>
          <p>
            <a 
              href="tel:+436609027092"
              class="footer-link">
              +43 660 9027092
            </a>
          </p>
          <p>
            <a 
              href="mailto:kontakt@sprach-eck.at?subject=Anliegen%20und%20Kontaktaufnahmemöglichkeiten"
              class="footer-link">
              kontakt@sprach-eck.at
            </a>
          </p>
        </div>
      </div>
    </div>

    <!-- Bottom Footer -->
    <div class="mt-12 pt-8 border-t border-gray-100">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-dark/60">
        <div class="w-full text-center">
          © {currentYear} Sprach Eck. Alle Rechte vorbehalten. Website erstellt von <a href="https://zunderwunder.at" class="footer-link" target="_blank" rel="noopener noreferrer">Zunderwunder</a>.
        </div>
        <div class="flex items-center gap-4">
          <a href="/impressum" class="footer-link">Impressum</a>
          <span>|</span>
          <a href="/datenschutz" class="footer-link">Datenschutzerklärung</a>
        </div>
      </div>
    </div>
  </div>
</footer>